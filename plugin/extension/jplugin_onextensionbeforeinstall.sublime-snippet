function onExtensionBeforeInstall(\$method, \$type, \$manifest, \$eid)
{
	throw new RuntimeException('plgExtensionExample::onExtensionBeforeInstall: Installing ' . \$type . ' from ' . \$method . (\$method == 'install' ? ' with manifest supplied' : ' using discovered extension ID ' . \$eid, -1));
}

