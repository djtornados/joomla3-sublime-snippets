<snippet>
	<content><![CDATA[// Scroll Top.
\$(document).ready(function() {
	\$(window).scroll(function () {
		if (\$(this).scrollTop() > 100) {
			\$('.scroll-top').fadeIn();
		} else {
			\$('.scroll-top').fadeOut();
		}
	});

	\$('.scroll-top').click(function () {
		\$('html, body').animate({
			scrollTop: 0
		}, 600);
		return false;
	});
});]]></content>
	<tabTrigger>jquery_scroll-top_float</tabTrigger>
	<scope>source.js</scope>
</snippet>
