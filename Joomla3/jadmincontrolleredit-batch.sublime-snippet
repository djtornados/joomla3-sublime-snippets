<snippet>
	<content><![CDATA[/**
 * Method to run batch operations.
 *
 * @param   object  \$model  The model.
 *
 * @return  boolean  True if successful, false otherwise and internal error is set.
 *
 * @since   1.7
 */
public function batch(\$model = null)
{
	JSession::checkToken() or jexit(JText::_('JINVALID_TOKEN'));

	// Set the model
	\$model = \$this->getModel('${1/(.+)/\u\1/g}', '${TM_PROJECT/(.+)/\u\1/g}Model', array());

	// Preset the redirect
	\$this->setRedirect(JRoute::_('index.php?option=com_${TM_PROJECT/(.+)/\L\1/g}&view=${1:view_edit}' . \$this->getRedirectToListAppend(), false));

	return parent::batch(\$model);
}]]></content>
	<tabTrigger>jadmincontrolleredit-batch</tabTrigger>
</snippet>
